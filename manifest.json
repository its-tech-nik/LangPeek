{
  "manifest_version": 3,
  "name": "Middle-Click Translate",
  "version": "1.0.0",
  "description": "Translate selected text by middle-clicking. Auto-detects source language.",
  "author": "its.tech.nik",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "@middle-click-translate",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}

